<!--rememebr new cat -->
<% if @cats.present? %>
<ul>
	<% @cats.each do |cat| %>
	<li>
		<!-- picture -->
		<%= link_to cat.name, cat %>
		<%= link_to "Edit", edit_admin_cat_path(cat) %> | 
		<%= link_to "Delete", [:admin, cat], method: :delete, data: { confirm: "Sure?" } %>
	</li>
	<% end %>
	
</ul>
<% else %>
	<p> There are no cats yet.</p>
<% end %>
